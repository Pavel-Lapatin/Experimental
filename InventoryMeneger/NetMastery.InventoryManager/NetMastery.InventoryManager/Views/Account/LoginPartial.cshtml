@using NetMastery.InventoryManager.Models
@model LoginViewModel

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="wrap">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login form-horizontal", role = "form" }))
    {
            @Html.AntiForgeryToken()
            <p class="form-title">Sign in</p>
            <div class="form-group">
                @Html.TextBoxFor(m => m.UserName, new { @class = "user-name form-control", placeholder = "User name" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "password form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="custom-checkbox text-left">
                @Html.LabelFor(m => m.RememberMe)
                @Html.CheckBoxFor(m => m.RememberMe)

            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <input type="submit" class="btn btn-success btn-sm btn-login" value="Sign In" />
            </div>
}
            </div>
        </div>
    </div>
</div>
